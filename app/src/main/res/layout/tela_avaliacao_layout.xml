<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/navInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azulFundo"
        app:logo="@drawable/ic_estagiario"
        app:title="Avaliação"
        app:titleMarginStart="115dp"
        app:titleTextColor="#FFF" >
        <ImageView
            android:layout_marginLeft="80dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_logo_fundoazul"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:paddingRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp"
        android:paddingLeft="15dp"
        android:text="A avaliação síncrona consiste em um teste de 20 perguntas que abordam temas como sentimentos, objetivos profissionais e metas de vida; ao terminá-lo, o psicólogo fará uma breve sessão acerca do respondido.           O teste somente estará disponível no período agendado."
        android:textSize="40dp"
        android:textColor="#000"/>



</RelativeLayout>