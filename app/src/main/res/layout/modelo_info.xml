<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAvaliacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/avaliacao" />

            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/btnPsiPac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/psiquiatras" />

            <Button
                android:layout_marginTop="100dp"
                android:id="@+id/btnEstHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/horarios" />

            <Button
                android:layout_marginTop="150dp"
                android:id="@+id/btnEstSobre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sobre_o_app" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>